<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
        
<mapper namespace="com.first.demo.mapper.BoardMapper">

    <select id="getBoard" resultType="com.first.demo.domain.Board">
        SELECT
        *
        FROM
        board
    </select>
    
    <select id="getDetail" parameterType="int" resultType="com.first.demo.domain.Board">
        SELECT
        *
        FROM
        board where number = #{number}
    </select>
    
</mapper>